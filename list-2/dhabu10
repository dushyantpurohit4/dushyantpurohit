#include<iostream>
#define PI 3.14
using namespace std;
class area{
	private:
		float r;
	public:
		void circle(float r)
		{
			cout<<"Value of : "<<PI*r*r;
		}
};
int  main()
{
	
	cout<<"I am dushyant purohit "<<endl;
	cout<<"En_no    2201303180328 "<<endl;
	cout<<"---------------------"<<endl;
	area a;
	a.circle(6);	
